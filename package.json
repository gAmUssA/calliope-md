{
  "name": "calliope-md",
  "type": "commonjs",
  "displayName": "Calliope - Hybrid Markdown Editor",
  "description": "Ulysses-style inline Markdown rendering. Write in Markdown, see it rendered â€” syntax hides until you need it.",
  "version": "0.5.0",
  "publisher": "vikgamov",
  "license": "MIT",
  "icon": "images/icon.png",
  "repository": {
    "type": "git",
    "url": "https://github.com/gAmUssA/calliope-md"
  },
  "bugs": {
    "url": "https://github.com/gAmUssA/calliope-md/issues"
  },
  "homepage": "https://github.com/gAmUssA/calliope-md#readme",
  "keywords": [
    "markdown",
    "wysiwyg",
    "editor",
    "writing",
    "ulysses",
    "hybrid",
    "inline",
    "preview",
    "distraction-free"
  ],
  "engines": {
    "vscode": "^1.96.0"
  },
  "categories": [
    "Other",
    "Formatters"
  ],
  "galleryBanner": {
    "color": "#6366f1",
    "theme": "dark"
  },
  "activationEvents": [
    "onLanguage:markdown"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "calliope.toggle",
        "title": "Calliope: Toggle Inline Rendering"
      },
      {
        "command": "calliope.toggleCheckbox",
        "title": "Calliope: Toggle Task Checkbox"
      },
      {
        "command": "calliope.togglePresentationMode",
        "title": "Calliope: Toggle Presentation Mode"
      }
    ],
    "views": {
      "explorer": [
        {
          "type": "webview",
          "id": "calliope.mermaidRenderer",
          "name": "Mermaid Renderer",
          "visibility": "hidden"
        }
      ]
    },
    "configuration": {
      "title": "Calliope",
      "properties": {
        "calliope.enabled": {
          "type": "boolean",
          "default": true,
          "description": "Enable Calliope inline rendering"
        },
        "calliope.ghostOpacity": {
          "type": "number",
          "default": 0.3,
          "minimum": 0,
          "maximum": 1,
          "description": "Opacity for syntax markers in ghost state (0-1)"
        },
        "calliope.renderHeaders": {
          "type": "boolean",
          "default": true,
          "description": "Render headers with larger font sizes"
        },
        "calliope.renderEmphasis": {
          "type": "boolean",
          "default": true,
          "description": "Render bold, italic, and strikethrough text"
        },
        "calliope.renderTaskLists": {
          "type": "boolean",
          "default": true,
          "description": "Render task list checkboxes"
        },
        "calliope.renderLinks": {
          "type": "boolean",
          "default": true,
          "description": "Render links with hidden URLs"
        },
        "calliope.renderInlineCode": {
          "type": "boolean",
          "default": true,
          "description": "Render inline code with background"
        },
        "calliope.renderBlockquotes": {
          "type": "boolean",
          "default": true,
          "description": "Render blockquotes with left border and background"
        },
        "calliope.renderHorizontalRules": {
          "type": "boolean",
          "default": true,
          "description": "Render horizontal rules as visual separators"
        },
        "calliope.renderCodeBlocks": {
          "type": "boolean",
          "default": true,
          "description": "Style fenced code block delimiters"
        },
        "calliope.renderImages": {
          "type": "boolean",
          "default": true,
          "description": "Render inline image previews"
        },
        "calliope.renderLists": {
          "type": "boolean",
          "default": true,
          "description": "Render list markers with bullet styling"
        },
        "calliope.renderMermaidDiagrams": {
          "type": "boolean",
          "default": false,
          "description": "Enable inline rendering of mermaid diagrams (uses mermaid.js via webview)"
        },
        "calliope.renderMetadata": {
          "type": "boolean",
          "default": true,
          "description": "Dim YAML frontmatter blocks to distinguish from content"
        }
      }
    }
  },
  "scripts": {
    "copy-mermaid": "mkdir -p media/mermaid/chunks/mermaid.esm.min && cp node_modules/mermaid/dist/mermaid.esm.min.mjs media/mermaid/ && find node_modules/mermaid/dist/chunks/mermaid.esm.min -name '*.mjs' -not -name '*.map' -exec cp {} media/mermaid/chunks/mermaid.esm.min/ \\;",
    "compile": "npm run copy-mermaid && esbuild src/extension.ts --bundle --outfile=out/extension.js --external:vscode --format=cjs --platform=node",
    "watch": "npm run copy-mermaid && esbuild src/extension.ts --bundle --outfile=out/extension.js --external:vscode --format=cjs --platform=node --watch",
    "package": "vsce package",
    "test": "mocha 'test/**/*.test.js' --exit"
  },
  "devDependencies": {
    "@types/node": "^20.0.0",
    "@types/vscode": "^1.96.0",
    "esbuild": "^0.20.0",
    "typescript": "^5.4.0",
    "mocha": "^10.2.0",
    "ts-node": "^10.9.1",
    "mock-require": "^3.0.0",
    "sinon": "^15.0.0",
    "@types/mocha": "^10.0.1",
    "@types/sinon": "^10.0.6"
  },
  "dependencies": {
    "cheerio": "^1.0.0",
    "mermaid": "^11.4.1",
    "remark-gfm": "^4.0.0",
    "remark-parse": "^11.0.0",
    "unified": "^11.0.0",
    "unist-util-visit": "^5.0.0"
  }
}
